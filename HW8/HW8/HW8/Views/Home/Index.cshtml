@model IEnumerable<HW8.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<center><h2>Art Tracker!</h2></center>
<center><h4>By: Sam Wetzel</h4></center>
<hr />
<center><h3>Art by Genre</h3></center>
<!--Generates buttons with a for each loop-->
<div id="genreButtons" class="btn-group">
    @foreach (var item in Model)
    {
        <button type="button" class="genreButton btn btn-primary" id="@item.Name" value="@item.ID">@Html.DisplayName(item.Name)</button>
    }
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <br />
        <!--Table created that is targeted by Javascript AJAX calls in /Scripts/genre.js-->
        <table id="genreTable" class="table table-striped"></table>
    </div>
</div>


<!--Required links to the CSS sheet and Javascript file in order to  make AJAX work-->
@section GenreScripts 
{
    <link href="~/Content/genre.css" rel="stylesheet" type=" text/css" />
    <script type="text/javascript" src="~/Scripts/genre.js"></script>
}